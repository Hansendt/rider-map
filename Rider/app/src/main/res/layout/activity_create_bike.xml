<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".CreateBikeActivity"
    android:background="@drawable/gradient"
    android:orientation="vertical"
    android:padding="25dp">

    <LinearLayout
        android:id="@+id/back"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageButton
            android:id="@+id/btnBacktoWelcome"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@color/colorPrimary"
            android:src="@drawable/back" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:text="New Bike Data"
            android:textColor="@color/white"
            android:textSize="27sp"
            android:textStyle="bold" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="50dp"
        android:id="@+id/form">

        <com.google.android.material.textfield.TextInputLayout
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:boxBackgroundColor="@color/colorPrimary"
            android:textColorHint="@color/white"
            app:boxStrokeColor="@color/white">
            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/vehicleName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Bike Name"
                android:textColor="@color/white"
                android:textSize="13sp" />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:boxBackgroundColor="@color/colorPrimary"
            android:textColorHint="@color/white"
            android:layout_marginTop="20px"
            android:hint="Brand"
            app:boxStrokeColor="@color/white">
            <AutoCompleteTextView
                android:id="@+id/vehicleBrand"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Brand"
                android:textColor="@color/white"
                android:textSize="13sp"/>
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:boxBackgroundColor="@color/colorPrimary"
            android:textColorHint="@color/white"
            android:layout_marginTop="20px"
            app:boxStrokeColor="@color/white">
            <AutoCompleteTextView
                android:id="@+id/vehicleModel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Model"
                android:textColor="@color/white"
                android:textSize="13sp"/>
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:boxBackgroundColor="@color/colorPrimary"
            android:textColorHint="@color/white"
            android:layout_marginTop="20px"
            app:boxStrokeColor="@color/white">
            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/platNumber"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Plate Number"
                android:textColor="@color/white"
                android:textSize="13sp"/>
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:boxBackgroundColor="@color/colorPrimary"
            android:textColorHint="@color/white"
            android:layout_marginTop="20px"
            app:boxStrokeColor="@color/white">
            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/vehicleColor"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Color"
                android:textColor="@color/white"
                android:textSize="13sp"/>
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:boxBackgroundColor="@color/colorPrimary"
            android:textColorHint="@color/white"
            android:layout_marginTop="20px"
            app:boxStrokeColor="@color/white">
            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/cylinderCapacity"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Cylinder Capacity (CC)"
                android:textColor="@color/white"
                android:inputType="number"
                android:textSize="13sp"/>
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:boxBackgroundColor="@color/colorPrimary"
            android:textColorHint="@color/white"
            android:layout_marginTop="20px"
            app:boxStrokeColor="@color/white">
            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/vehicleYear"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Year"
                android:textColor="@color/white"
                android:inputType="number"
                android:textSize="13sp"/>

        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:boxBackgroundColor="@color/colorPrimary"
            android:textColorHint="@color/white"
            android:layout_marginTop="20px"
            app:boxStrokeColor="@color/white">
            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/vehicleFrameNumber"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Frame Number"
                android:textColor="@color/white"
                android:textSize="13sp"/>
        </com.google.android.material.textfield.TextInputLayout>
    </LinearLayout>


    
