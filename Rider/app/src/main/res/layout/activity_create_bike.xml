    <TextView
        android:id="@+id/textView1"
        android:layout_width="match_parent"
        android:layout_height="14dp"
        android:text="Vehicle Name"
        android:textSize="12sp"
        android:textColor="@color/grey"/>
    <EditText
        android:id="@+id/vehicleName"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:layout_below="@+id/textView1"
        android:textColor="@color/white"
        android:backgroundTint="@color/white"
        android:textSize="12sp"/>
    <TextView
        android:id="@+id/example1"
        android:layout_width="match_parent"
        android:layout_height="14dp"
        android:layout_marginBottom="10dp"
        android:layout_below="@+id/vehicleName"
        android:textSize="12sp"
        android:textColor="@color/grey"
        android:text="ex. My first bike"/>

    <TextView
        android:id="@+id/textView2"
        android:layout_width="match_parent"
        android:layout_height="14dp"
        android:layout_below="@+id/example1"
        android:textSize="12sp"
        android:textColor="@color/grey"
        android:text="Vehicle Brand"/>

    <EditText
        android:id="@+id/vehicleBrand"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:layout_below="@+id/textView2"
        android:layout_marginBottom="10dp"
        android:backgroundTint="@color/white"
        android:textColor="@color/white"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="match_parent"
        android:layout_height="14dp"
        android:layout_below="@+id/vehicleBrand"
        android:textSize="12sp"
        android:textColor="@color/grey"
        android:text="Vehicle Model"/>

    <EditText
        android:id="@+id/vehicleModel"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:layout_marginBottom="10dp"
        android:layout_below="@+id/textView3"
        android:textColor="@color/white"
        android:backgroundTint="@color/white"
        android:textSize="12sp"/>

    <TextView
        android:id="@+id/textView4"
        android:layout_width="match_parent"
        android:layout_height="14dp"
        android:layout_below="@+id/vehicleModel"
        android:textSize="12sp"
        android:textColor="@color/grey"
        android:text="Plat Number"/>

    <EditText
        android:id="@+id/platNumber"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:layout_marginBottom="10dp"
        android:layout_below="@+id/textView4"
        android:textColor="@color/white"
        android:backgroundTint="@color/white"
        android:textSize="12sp"/>

    <TextView
        android:id="@+id/textView5"
        android:layout_width="match_parent"
        android:layout_height="14dp"
        android:layout_below="@+id/platNumber"
        android:textSize="12sp"
        android:textColor="@color/grey"
        android:text="Vehicle Color"/>

    <EditText
        android:id="@+id/vehicleColor"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:layout_below="@+id/textView5"
        android:layout_marginBottom="10dp"
        android:backgroundTint="@color/white"
        android:textColor="@color/white"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="match_parent"
        android:layout_height="14dp"
        android:layout_below="@+id/vehicleColor"
        android:textSize="12sp"
        android:textColor="@color/grey"
        android:text="Cylinder Capacity (CC)"/>

    <EditText
        android:id="@+id/cylinderCapacity"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:layout_marginBottom="10dp"
        android:layout_below="@+id/textView6"
        android:inputType="number"
        android:textColor="@color/white"
        android:backgroundTint="@color/white"
        android:textSize="12sp"/>

    <TextView
        android:id="@+id/textView7"
        android:layout_width="match_parent"
        android:layout_height="14dp"
        android:layout_below="@+id/cylinderCapacity"
        android:textSize="12sp"
        android:textColor="@color/grey"
        android:text="Vehicle Year"/>

    <EditText
        android:id="@+id/vehicleYear"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:layout_marginBottom="10dp"
        android:layout_below="@+id/textView7"
        android:inputType="number"
        android:textColor="@color/white"
        android:backgroundTint="@color/white"
        android:textSize="12sp"/>

    <TextView
        android:id="@+id/textView8"
        android:layout_width="match_parent"
        android:layout_height="14dp"
        android:layout_below="@+id/vehicleYear"
        android:textSize="12sp"
        android:textColor="@color/grey"
        android:text="Vehicle Frame Number"/>

    <EditText
        android:id="@+id/vehicleFrameNumber"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:layout_marginBottom="10dp"
        android:layout_below="@+id/textView8"
        android:textColor="@color/white"
        android:backgroundTint="@color/white"
        android:textSize="12sp"/>

    <Button
        android:id="@+id/buttonNext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:backgroundTint="@color/white"
        android:textColor="@color/black"
        android:text="Next"/>


</RelativeLayout>